<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="e.shaniadir.myapplication.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/london_button"
        android:layout_width="178dp"
        android:layout_height="80dp"
        android:text="London"
        app:layout_constraintBottom_toTopOf="@+id/paris_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/paris_button"
        android:layout_width="178dp"
        android:layout_height="80dp"
        android:text="Paris"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/london_button" />

</android.support.constraint.ConstraintLayout>
